<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/avatar_image"
            android:layout_width="@dimen/avatar_image_size"
            android:layout_height="@dimen/avatar_image_size"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="@dimen/margin_10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/first_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="First name"
                android:textColor="@color/black"
                android:textSize="@dimen/name_size"
                android:layout_margin="@dimen/margin_10dp"/>

            <TextView
                android:id="@+id/last_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Last name"
                android:textColor="@color/black"
                android:textSize="@dimen/name_size"
                android:layout_margin="@dimen/margin_10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Email"
            android:textColor="@color/black"
            android:textSize="@dimen/email_size"
            android:layout_margin="@dimen/margin_10dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end">


            <ImageView
                android:id="@+id/edit_user_image"
                android:layout_width="@dimen/action_ic_size"
                android:layout_height="@dimen/action_ic_size"
                android:src="@drawable/ic_edit"
                android:layout_margin="@dimen/margin_10dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/delete_user_image"
                android:layout_width="@dimen/action_ic_size"
                android:layout_height="@dimen/action_ic_size"
                android:src="@drawable/ic_delete"
                android:layout_margin="@dimen/margin_10dp"
                android:visibility="gone"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>


</androidx.cardview.widget.CardView>